<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import paint.PaintCanvas?>



<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="paint.PaintController"
            prefHeight="400.0" prefWidth="600.0">
    <PaintCanvas fx:id="paintCanvas" width="450" height="470"/>
    <ColorPicker fx:id="colorPicker" onAction="#changeColor" AnchorPane.leftAnchor="0"/>
    <Button fx:id="eraser" text="erase" AnchorPane.leftAnchor="150" onAction="#erase"/>
    <Button fx:id="draw" text="draw" AnchorPane.leftAnchor="200" onAction="#draw"/>

</AnchorPane>
